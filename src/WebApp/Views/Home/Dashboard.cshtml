    <!-- Main Content -->
    <main class="flex-grow-1 p-4 bg-white">
        <h2 class="mb-4" style="color: black">Willkommen,
            @if (User.Identity != null)
            {
                @User.Identity.Name
            }
            !</h2>

        <!-- Stat Boxes -->
        <div class="row g-4">
            <div class="col-sm-6 col-lg-4">
                <div class="card shadow-sm p-3 text-center">
                    <h5>Offene Tickets</h5>
                    <p class="display-5 text-primary">23</p>
                </div>
            </div>
            <div class="col-sm-6 col-lg-4">
                <div class="card shadow-sm p-3 text-center">
                    <h5>Geschlossene Tickets</h5>
                    <p class="display-5 text-success">150</p>
                </div>
            </div>
            <div class="col-sm-12 col-lg-4">
                <div class="card shadow-sm p-3 text-center">
                    <h5>Neue Tickets heute</h5>
                    <p class="display-5 text-warning">5</p>
                </div>
            </div>
        </div>

        <!-- Chart -->
        <div class="card shadow-sm mt-5">
            <div class="card-header bg-transparent text-primary fw-semibold">
                Geschlossene Tickets (letztes Jahr)
            </div>
            <div class="card-body">
                <div class="chart-container">
                    <canvas id="dashboardBarChart"></canvas>
                </div>
            </div>
        </div>
        <div>
            <div class="mt-5 text-center">
                <a asp-controller="Ticket" asp-action="TicketList" class="btn btn-dark btn-lg">
                    Zur Ticketübersicht
                </a>
            </div>
        </div>
    </main>
</div>

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctx = document.getElementById('dashboardBarChart').getContext('2d');
    const myBarChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Jan', 'Feb', 'Mär', 'Apr', 'Mai', 'Jun', 'Jul', 'Aug', 'Sep', 'Okt', 'Nov', 'Dez'],
            datasets: [{
                label: 'Tickets',
                data: [12, 19, 3, 5, 2, 8, 10, 4, 7, 20, 2, 6],
                backgroundColor: 'rgba(59, 39, 93, 0.7)',
                borderColor: 'rgba(59, 39, 93, 1)',
                borderWidth: 1,
                borderRadius: 6,
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true
                }
            },
            plugins: {
                legend: {
                    labels: {
                        color: '#3b275d',
                        font: {
                            size: 14,
                            weight: 'bold'
                        }
                    }
                }
            }
        }
    });
</script>
}
