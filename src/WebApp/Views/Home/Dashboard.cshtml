@{
    ViewBag.Title = "Dashboard";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mt-3 mb-5">
        <div class="fw-bold fs-4">Logo</div>
        <div>
            @*@if (Model.IsAdmin)
        {
            <a asp-action="Admin" class="me-3 text-secondary text-decoration-none">Adminbereich</a>
        }*@
            <a asp-action="Logout" class="btn btn-dark">Logout</a>
        </div>
    </div>

    <h1 class="text-center mb-4" style="font-size:3rem;">Hi,@*@Model.Username*@ !</h1>

    <div class=" row justify-content-center align-items-start" style="min-height:400px;">
        <div class="col-md-5">
            <div class="border p-4 h-100 d-flex align-items-center" style="min-height:340px;">
                <span class="fs-5 text-secondary">
                    Dashboard mit erweiterten Statistiken und<br>
                    bereits erstellten Tickets (Liste) vom<br>
                    eingeloggten User
                </span>
            </div>

            <div class="d-flex mt-4 gap-3">
                <a asp-action="Edit" class="btn btn-dark flex-fill">Ticket bearbeiten</a>
                <a asp-action="Close" class="btn btn-danger flex-fill">Ticket schliessen</a>
            </div>
        </div>
        <div class="col-md-5 d-flex flex-column align-items-center">
            <div class="mb-4 text-center fs-5 text-secondary">
                Wenn Sie ein Problem melden<br>
                möchten können Sie hier ein neues<br>
                Ticket anlegen
            </div>
            <a asp-action="Create" class="btn btn-dark btn-lg mt-2 px-5">Ticket anlegen</a>
        </div>
    </div>
</div>





