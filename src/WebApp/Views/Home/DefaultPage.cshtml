@{
ViewBag.Title = "Willkommen - Lushwear Ticketsystem";
}

<div class="container py-5" style="max-width: 900px;">
    <div class="text-center mb-4">
        <h2 class="fs-1 fw-bold" style="color:#3b275d;">Willkommen beim Lushwear Ticketsystem</h2>
        <p class="text-secondary fs-5">
            Hier findest du öffentliche Statistiken und aktuelle Ankündigungen rund um unser Ticketsystem.
        </p>
    </div>

    <div class="card shadow-sm mb-5">
        <div class="card-header bg-transparent" style="color:#3b275d; font-weight: 600;">
            Tickets pro Monat (letztes Jahr)
        </div>
        <div class="card-body">
            <canvas id="myBarChart"></canvas>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-transparent" style="color:#3b275d; font-weight: 600;">
            Letzte Ankündigungen
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Serverwartung am 30.06.2025 von 02:00 bis 05:00 Uhr.</li>
            <li class="list-group-item">Neue Funktion: Ticketpriorisierung eingeführt.</li>
            <li class="list-group-item">Supportzeiten wurden erweitert.</li>
        </ul>
    </div>
</div>

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctx = document.getElementById('myBarChart').getContext('2d');
    const myBarChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Jan', 'Feb', 'Mär', 'Apr', 'Mai', 'Jun', 'Jul', 'Aug', 'Sep', 'Okt', 'Nov', 'Dez'],
            datasets: [{
                label: 'Tickets',
                data: [12, 19, 3, 5, 2, 8, 10, 4, 7, 20, 2, 6],
                backgroundColor: 'rgba(59, 39, 93, 0.7)',
                borderColor: 'rgba(59, 39, 93, 1)',
                borderWidth: 1,
                borderRadius: 6,
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        stepSize: 1
                    }
                }
            },
            plugins: {
                legend: {
                    labels: {
                        color: '#3b275d',
                        font: {
                            size: 14,
                            weight: 'bold'
                        }
                    }
                }
            }
        }
    });
</script>
}
