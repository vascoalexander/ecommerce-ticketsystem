@{
    ViewBag.Title = "Ticket-Liste";
    Layout = "_Layout";
}
<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-end p-2">
    <div>
        <h2>Tickets</h2>
        <p>Verwalten Sie alle Tickets in Ihrem System</p>
    </div>
    <div class="align-self-start">
        <button id="btnNeuesTicket" class="btn border-dark">Neues Ticket</button>
    </div>
</div>

<div class="container p-3 my-3 border">
    <div class="row">
        <div class="col">
            <label for="status" class="form-label">Status</label>
            <input id="status" type="text" class="form-control" placeholder="Nach Status suchen...">
        </div>
        <div class="col">
            <label for="projekt" class="form-label">Projekte</label>
            <input id="projekt" type="text" class="form-control" placeholder="Nach Projekt suchen...">
        </div>
        <div class="col">
            <label for="suche" class="form-label">Suche</label>
            <input id="suche" type="text" class="form-control" placeholder="Ticket suchen...">
        </div>
    </div>
</div>

<div class="container p-3 my-3 border" style="max-height: 400px; overflow-y: auto;">
    <div class="row">
        <div class="col">
            <p>Ticket</p>
        </div>
        <div class="col">
            <p>Projekt</p>
        </div>
        <div class="col">
            <p>Status</p>
        </div>
        <div class="col">
            <p>Aktionen</p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p>#TicketID Ticket-Titel</p>
        </div>
        <div class="col">
            
            <p>Projekt Titel</p>
        </div>
        <div class="col">
            <span class="badge badge-pill bg-danger">Offen</span>
            <span class="badge badge-pill bg-warning">In Bearbeitung</span>
            <span class="badge badge-pill bg-success">Geschlossen</span>
        </div>
        <div class="col">
            <a href="">Bearbeiten</a>
            <a href="">Schließen</a>
            <a href="">Details</a>
        </div>
    </div>
</div>
<div class="container p-3 my-3 border" id="hiddenDiv" style="display: none;">
    <form action="">
        <div class="row">
            <div class="col">
                <label for="titel" class="form-label">Titel</label>
                <input id="titel" type="text" class="form-control">
            </div>
            <div class="col">
                <label for="projekt-create" class="form-label">Projekt</label>
                <select id="projekt-create" class="form-control">
                    <option value="">Bitte auswählen</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label for="description" class="form-label">Beschreibung</label>
                <textarea id="description" class="form-control" rows="4"></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label for="ticket-processor" class="form-label">Ticket-Bearbeiter</label>
                <select id="ticket-processor" class="form-control">
                    <option value="">Bitte auswählen</option>
                </select>
            </div>
        </div>
    </form>
    <div class="row mt-3">
        <div class="col d-flex justify-content-end">
            <button id="btnTicketAbbrechen" class="btn btn-secondary me-2">Abbrechen</button>
            <button id="btnTicketErstellen" class="btn btn-primary">Ticket Erstellen</button>
        </div>
    </div>
</div>

<script>
    const hiddenDiv = document.getElementById('hiddenDiv');

    function toggleHiddenDiv(show) {
        hiddenDiv.style.display = show ? 'block' : 'none';
        hiddenDiv.scrollIntoView({ behavior: 'smooth' });
    }

    document.getElementById('btnNeuesTicket').addEventListener('click', () => toggleHiddenDiv(true));
    document.getElementById('btnTicketAbbrechen').addEventListener('click', () => toggleHiddenDiv(false));
    document.getElementById('btnTicketErstellen').addEventListener('click', () => toggleHiddenDiv(false));
</script>
