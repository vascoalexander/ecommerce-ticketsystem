@model WebApp.ViewModels.ProjectDetailViewModel
@{
    ViewBag.Title = "Details Project";
}
<div class="container my-5">
    <div class="mb-4">
        <a href="@Url.Action("AdminPage", "Admin")" class="btn btn-outline-secondary">
            Zurück zur Übersicht
        </a>
    </div>

    <div class="mb-4">
        <h2 class="fw-bold mb-1">@Model.Project.Title</h2>
        <div class="text-muted">
            Kategorie: <strong>@Model.Project.Category</strong><br />
            Zeitraum: <strong>@Model.Project.StartDate.ToString("dd.MM.yyyy")</strong> - <strong>@Model.Project.EndDate.ToString("dd.MM.yyyy")</strong>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="text-secondary mb-3">Projektbeschreibung</h5>
            <p class="mb-0">@Model.Project.Description</p>
        </div>
         <h4 class="mb-3">Tickets im Projekt</h4>
    <div class="table-responsive shadow-sm rounded mb-5">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Titel</th>
                    <th>Status</th>
                    <th>Ersteller</th>
                    <th>Zugewiesen an</th>
                    <th>Erstellt am</th>
                    <th>Aktionen</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Tickets == null || !Model.Tickets.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted">Keine Tickets zu diesem Projekt gefunden.</td>
                    </tr>
                }
                else
                {
                    foreach (var ticket in Model.Tickets)
                    {
                        <tr>
                            <td>@ticket.Id</td>
                            <td>
                                <strong>@ticket.Title</strong>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@ticket.Status</span>
                            </td>
                            <td>@ticket.CreatorUser.UserName</td>
                            <td>@ticket.AssignedUser?.UserName</td>
                            <td>@ticket.CreatedAt.ToString("dd.MM.yyyy")</td>
                            <td>
                                <a href="@Url.Action("Detail", "Ticket", new { id = ticket.Id })" class="btn btn-sm btn-outline-info me-1">Details</a>
                                <a href="@Url.Action("Edit", "Ticket", new { id = ticket.Id })" class="btn btn-sm btn-outline-primary">Bearbeiten</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
    </div>

