@{
    ViewBag.Title = "Admin-Bereich";
}

<div class="container my-5">
    <div class="mb-4">
        <a href="@Url.Action("Dashboard", "Home")" class="btn btn-outline-secondary">
            Zurück zum Dashboard
        </a>
    </div>

    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" asp-controller="Admin" asp-action="AdminPage">Projekte</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Admin" asp-action="UserManagement">Benutzer</a>
        </li>
    </ul>

    <div class="d-flex justify-content-between align-items-center flex-wrap mb-3">
        <h2 class="mb-3">Stammdaten Übersicht</h2>
        <div class="input-group" style="max-width: 300px;">
            <input type="text" class="form-control" placeholder="Suchen..."/>
            <button class="btn btn-outline-secondary">Filter</button>
        </div>
    </div>

    <p class="text-muted">Verwalten Sie hier alle Stammdaten der Anwendung.</p>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
            <tr>
                <th><input type="checkbox"/></th>
                <th>ID</th>
                <th>Name</th>
                <th>Kategorie</th>
                <th>Status</th>
                <th>Startdatum</th>
                <th>Enddatum</th>
                <th>Aktion</th>
            </tr>
            </thead>
            <tbody>
            @* kann durch foreach mit echten Daten gefüllt werden *@
            @for (int i = 1; i <= 10; i++)
            {
                <tr>
                    <td><input type="checkbox"/></td>
                    <td>@i</td>
                    <td>
                        <strong>Beispielprojekt @i</strong>
                        <div class="text-muted small">Kurze Beschreibung</div>
                    </td>
                    <td>IT</td>
                    <td><span class="badge bg-success">Aktiv</span></td>
                    <td>2025-01-01</td>
                    <td>2025-12-31</td>
                    <td>
                        <a href="#" class="btn btn-sm btn-outline-primary me-1">Bearbeiten</a>
                        <a href="#" class="btn btn-sm btn-outline-danger">Löschen</a>
                    </td>
                </tr>
                // bis hier hin muss es denn ersetzt werden
            }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-4 flex-wrap gap-2">
        <div class="text-muted small">Zeige 1 bis 10 von 100 Einträgen</div>
        <nav>
            <ul class="pagination pagination-sm mb-0">
                <li class="page-item"><a class="page-link" href="#">Zurück</a></li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">Weiter</a></li>
            </ul>
        </nav>
        <div class="text-muted small">2 Einträge ausgewählt</div>
    </div>

    <div class="mt-4 d-flex flex-wrap gap-2">
        <input type="text" class="form-control w-100 w-md-50" placeholder="Kommentar oder Aktion..."/>
        <button class="btn btn-dark">Anwenden</button>
    </div>
</div>
