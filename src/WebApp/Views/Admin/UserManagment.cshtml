
@model WebApp.ViewModels.AdminUserViewModel
@{
    ViewBag.Title = "Benutzerverwaltung";
}

 <div class="container my-5">
    <h2 class="mb-4">Benutzerverwaltung</h2>

    <form method="get" class="row row-cols-lg-auto g-2 align-items-center mb-4">
        <div class="col-12">
            <input type="text" name="search" value="@Model.Search" class="form-control" placeholder="Benutzername suchen..." />
        </div>
        <div class="col-12">
            <select name="sortOrder" class="form-select">
                <option value="">Sortieren nach Name )</option>
                <option value="name_desc" @(Model.SortOrder == "name_desc" ? "selected" : "")>Name absteigend</option>
                <option value="id_desc" @(Model.SortOrder == "id_desc" ? "selected" : "")>ID absteigend</option>
            </select>
        </div>
        <div class="col-12">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="includeInactive" value="true" @(Model.IncludeInactive ? "checked" : "") />
                <label class="form-check-label">Inaktive anzeigen</label>
            </div>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-outline-secondary">Filtern</button>
            <a asp-action="CreateUser" class="btn btn-primary ms-2">Neu anlegen</a>
        </div>
    </form> 

 <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Rollen</th>
                    <th>Status</th>
                    <th>Aktionen</th>
                </tr>
            </thead>
            <tbody>
               @if (!Model.Users.Any())
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted">Keine Benutzer gefunden.</td>
                    </tr>
                }
                else
                {
                    foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>
                                @if (user.AssignedRoles.Any() == true)
                                {
                                    @string.Join(", ", user.AssignedRoles)
                                }
                                else
                                {
                                    <span class="text-muted">Keine Rolle zugewiesen</span>
                                }
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge bg-success">Aktiv</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inaktiv</span>
                                }
                            </td>
                            <td>
                                <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary me-1">Bearbeiten</a>
                                <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger">LÃ¶schen</a>
                            </td>
                        </tr>
                    }
                } 
            </tbody>
        </table>
    </div>
</div>
