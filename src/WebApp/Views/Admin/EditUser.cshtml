@model WebApp.ViewModels.AdminUserViewModel
@{
    ViewBag.Title = "Benutzer bearbeiten";
    Layout = "_LayoutLushware";
}

<div class="container my-5">
    <div class="mb-4">
        <a href="@Url.Action("UserManagement", "Admin")" class="btn btn-outline-secondary">
            Zurück zur Übersicht
        </a>
    </div>
    <div class="card shadow-sm p-4">
        <h2 class="mb-4">Benutzer bearbeiten</h2>

    <form asp-action="EditUser" method="post" autocomplete="off" id="editForm">
        <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="UserName" class="form-label">Benutzername</label>
                <input asp-for="UserName" class="form-control" autocomplete="username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">E-Mail</label>
            <input asp-for="Email" type="email" class="form-control" autocomplete="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
      

     

            <div class="mb-3">
                <label asp-for="SelectedRole" class="form-label">Rolle</label>
                <select asp-for="SelectedRole" asp-items="Model.AvailableRoles" class="form-select">
                    <option value="">-- Rolle auswählen --</option>
                </select>
                <span asp-validation-for="SelectedRole" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Neues Passwort</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <label asp-for="ConfirmNewPassword" class="form-label">Passwort wiederholen</label>
                <input asp-for="ConfirmNewPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-end flex-wrap mb-4 gap-3">
     
      
            
            <a href="@Url.Action("UserManagement", "Admin")" class="btn btn-danger">Abbrechen</a>

        <div>
            @if (Model.IsActive)
            {
                <button name="changeStatus" value="deactivate" class="btn btn-danger">User deaktivieren</button>
            }
            else
            {
                <button name="changeStatus" value="activate" class="btn btn-outline-success">User aktivieren</button>
            }

         

            <button type="button" id="saveBtn" name="submitAction" value="save" class="btn btn-dark">Speichern</button>
        
            </div>
        </div>

<div id="confirmBox" style="display:none; position:fixed; left:0;top:0;width:100vw;height:100vh;background:rgba(0,0,0,0.5);z-index:2000;">
    <div style="background:white;padding:30px;border-radius:10px;max-width:350px;margin:10vh auto;box-shadow:0 3px 10px #0002;">
        <p>Sind Sie sicher, dass Sie speichern wollen?</p>
        <button id="confirmYes" class="btn btn-success">Ja, speichern</button>
        <button id="confirmNo" class="btn btn-secondary">Abbrechen</button>
    </div>
</div>
    </form>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
    <script>
        // Speichern-Button öffnet das Modal
        document.getElementById("saveBtn").addEventListener("click", function (e) {
            e.preventDefault(); // Damit kein Submit passiert
            document.getElementById("confirmBox").style.display = "block";
        });

        // Ja, speichern: Formular absenden
        document.getElementById("confirmYes").addEventListener("click", function () {
            document.getElementById("editForm").submit();
        });

        // Abbrechen: Modal schließen, Formular NICHT absenden
        document.getElementById("confirmNo").addEventListener("click", function () {
            document.getElementById("confirmBox").style.display = "none";
        });
    </script>
}

</div>

