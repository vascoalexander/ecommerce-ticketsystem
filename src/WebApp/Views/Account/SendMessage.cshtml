@model WebApp.ViewModels.SendMessageViewModel
@{
    ViewData["Title"] = "Neue Nachricht senden";
}
<div class="mt-4">
    <h1>@ViewData["Title"]</h1>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="SendMessage" asp-controller="Account">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="ReceiverId" class="form-label"></label>
                    <select asp-for="ReceiverId" class="form-select" asp-items="@Model.AvailableReceivers">
                        <option value="">-- Empfänger auswählen --</option>
                    </select>
                    <span asp-validation-for="ReceiverId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Subject" class="form-label"></label>
                    <input asp-for="Subject" class="form-control" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Body" class="form-label"></label>
                    <textarea asp-for="Body" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Body" class="text-danger"></span>
                </div>

                <div class="mb-3 d-flex justify-content-between">
                    <a asp-action="Messages" asp-controller="Account" class="btn btn-outline-secondary">Abbrechen</a>
                    <button type="submit" class="btn btn-dark">Nachricht senden</button>
                </div>
            </form>
        </div>
    </div>
</div>
