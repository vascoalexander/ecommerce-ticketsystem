@model WebApp.ViewModels.SendMessageViewModel
@{
    ViewData["Title"] = "Neue Nachricht senden";
}

<div class="container my-5">
    <div class="mb-4">
        <a href="@Url.Action("Messages", "Account")" class="btn btn-outline-secondary">
            Zurück zur Nachrichtenübersicht
        </a>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">@ViewData["Title"]</h2>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="SendMessage" asp-controller="Account">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="ReceiverId" class="form-label">Empfänger</label>
                            <select asp-for="ReceiverId" class="form-select" asp-items="@Model.AvailableReceivers">
                                <option value="">-- Empfänger auswählen --</option>
                            </select>
                            <span asp-validation-for="ReceiverId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Subject" class="form-label">Betreff</label>
                            <input asp-for="Subject" class="form-control" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Body" class="form-label">Nachricht</label>
                            <textarea asp-for="Body" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Body" class="text-danger"></span>
                        </div>

                        <div class="mb-3 d-flex justify-content-end">
                            <button type="submit" class="btn btn-dark">Nachricht senden</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>