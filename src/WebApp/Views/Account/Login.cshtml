@{
    ViewBag.Title = "Login";
}
@model LoginViewModel;

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow p-4" style="max-width: 400px; width: 100%;">

        <div class="text-center mb-4">
            <img src="~/images/Logo.png" alt="Lushwear Logo" class="logo" style="max-height: 60px; margin-left: auto; margin-right: auto;">
            <h2 class="mt-3">Anmelden</h2>
            <p class="text-muted">Melden Sie sich in Ihrem Ticketsystem-Konto an</p>
        </div>

        <form asp-action="Login" method="post">
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="Benutzername" />
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Passwort" />
                <label asp-for="Password">Passwort</label>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-dark btn-lg">Anmelden</button>
            </div>
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <p class="text-danger mt-2">@Model.ErrorMessage</p>
            }
        </form>
    </div>
</div>